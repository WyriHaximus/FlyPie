{
    "name": "wyrihaximus/fly-pie",
    "description": "Flysystem integration plugin for CakePHP 4",
    "type": "cakephp-plugin",
    "license": "MIT",
    "keywords": [
        "flysystem",
        "cakephp"
    ],
    "authors": [
        {
            "name": "Cees-Jan Kiewiet",
            "email": "ceesjank@gmail.com",
            "homepage": "https://www.wyrihaximus.net/"
        }
    ],
    "require": {
        "php": "^8.0.2",
        "cakephp/cakephp": "^4.0",
        "league/flysystem": "^3.0"
    },
    "require-dev": {
        "league/flysystem-async-aws-s3": "^3.0",
        "cakephp/debug_kit": "^4.0",
        "cakephp/plugin-installer": "^1.3",
        "lorenzo/piping-bag": "^2.0",
        "phake/phake": "4.*",
        "phpstan/phpstan": "^1.0",
        "phpunit/phpunit": "^9.3",
        "ray/di": "^2.2",
        "squizlabs/php_codesniffer": "~3.7.0"
    },
    "autoload": {
        "psr-4": {
            "WyriHaximus\\FlyPie\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "WyriHaximus\\Tests\\FlyPie\\": "tests/"
        },
        "files": [
            "tests/functions.php"
        ]
    },
    "suggest": {
        "league/flysystem-async-aws-s3": "Needed to support the AsyncAwsS3Adapter Factory",
        "lorenzo/piping-bag": "Dependencies Injection Container support"
    },
    "scripts": {
        "all": [
            "@phpcs",
            "@stan",
            "@phpunit"
        ],
        "phpcs": "phpcs -p",
        "stan": "phpstan analyse src/ -vvv",
        "phpunit": "phpunit --coverage-text"
    },
    "config": {
        "sort-packages": true,
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "allow-plugins": {
            "cakephp/plugin-installer": true
        }
    }
}